@model ConsumerPanelTestSystemApplication.ViewModels.BrandManagerViewModel

@{
    ViewBag.Title = "Details";
}

<h2>View @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s Details</h2>

<div>

    <fieldset class="fieldset-border">
        <legend class="legend-border"> &nbsp; Login Information</legend>
        <div class="form-horizontal">
            <dl class="dl-horizontal">
                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>
            </dl>
        </div>
    </fieldset>

    <fieldset class="fieldset-border">
        <legend class="legend-border"> &nbsp; Personal Information</legend>
        <div class="form-horizontal">
            <dl class="dl-horizontal">
                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.Telephone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.TelExtension)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TelExtension)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.Mobile)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Mobile)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>
            </dl>
        </div>
    </fieldset>

    <fieldset class="fieldset-border">
        <legend class="legend-border"> &nbsp; Employee Information</legend>
        <div class="form-horizontal">
            <dl class="dl-horizontal">
                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.ProductDivision)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductDivision)
                </dd>

                <dt style="text-align:left">
                    @Html.DisplayNameFor(model => model.Roles)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Roles)
                </dd>
            </dl>
        </div>
    </fieldset>
</div>

<div class="form-actions no-color col-md-offset-2">

    @Html.ActionLink("Back to Brand Manager List", "Index", null, new { @class = "btn btn-md btn-default" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-md btn-warning" })
</div>