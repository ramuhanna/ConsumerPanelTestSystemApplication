@using ConsumerPanelTestSystemApplication.Controllers;
@using ConsumerPanelTestSystemApplication.Models;
@model ConsumerPanelTestSystemApplication.Controllers.SurveyViewModel

@{
    ViewBag.Title = "View Survey";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h2> View Survey </h2>
    <table class="table">
        @for (int i = 0; i < Model.Questions.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(m => m.Questions[i].Id)
                    @Html.HiddenFor(m => m.Questions[i].ResponseType)
                    @Html.DisplayFor(m => m.Questions[i].QuestionText)
                </td>
                <td>
                    <div class="form-group">
                        @if (Model.Questions[i].ResponseType == ResponseType.RadioButton)
                        {
                            foreach (var answer in Model.Questions[i].PossibleAnswers)
                            {
                                @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswer, answer.Id, new { id = answer.Id })
                                <label for="@answer.Id" class="control-label">@answer.Text</label>
                            }
                        }
                        else if (Model.Questions[i].ResponseType == ResponseType.TextBox)
                        {
                            @Html.EditorFor(m => m.Questions[i].Input, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", placeholder = "Text or Score" } })
                        }

                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="form-group">
        <div>
        @if (User.IsInRole("CPT Coordinator"))
        {
            @Html.ActionLink("Add New Question", "QuestionCreate", "Question", null, new { @class = "btn btn-md btn-primary" })
        }


        </div>
    </div>
}

