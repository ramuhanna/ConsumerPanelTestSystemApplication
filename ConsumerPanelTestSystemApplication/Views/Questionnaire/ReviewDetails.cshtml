@model ConsumerPanelTestSystemApplication.ViewModels.QuestionnaireViewModel


@{
    ViewBag.Title = "Questionnaire Details";
}

<h2>Questionnaire Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResponseQuantityRequired)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResponseQuantityRequired)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuestionnaireTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuestionnaireTypeName)
        </dd>
              
       @if (Model.BComment != null)
       {
        <dt>
            @Html.DisplayNameFor(model => model.BComment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BComment)
        </dd>
       }

        @if (Model.MComment != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.MComment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MComment)
            </dd>
        }
       

    </dl>
</div>
<p>

    @if (User.IsInRole("Brand Manager") && Model.BReviewQuestionnaire != true && Model.Status == ConsumerPanelTestSystemApplication.Models.QuestionnaireStatus.BMQuestionnaireApproval)
    {
        @Html.ActionLink("View Survey", "CreateSurvey", "Survey", new { id = Model.QuestionnaireTypeId }, new { @class = "btn btn-md btn-success" })
        @Html.ActionLink("Review", "ReviewQuestionnaire", new { id = Model.Id }, new { @class = "btn btn-md btn-success" })

    }
    else if (User.IsInRole("Marketing Director") && Model.BReviewQuestionnaire != true && Model.Status == ConsumerPanelTestSystemApplication.Models.QuestionnaireStatus.MDQuestionnaireApproval)
    {
        @Html.ActionLink("View Survey", "CreateSurvey", "Survey", new { id = Model.QuestionnaireTypeId }, new { @class = "btn btn-md btn-success" })
        
        @Html.ActionLink("Review", "ReviewQuestionnaire", new { id = Model.Id }, new { @class = "btn btn-md btn-success" })
    }


    @if (User.IsInRole("Brand Manager"))
    {
        @Html.ActionLink("Back to Pending Requests", "SubmittedRequestsIndex", "CPTRequest", null, new { @class = "btn btn-md btn-default" })
    }
    else
    {
        @Html.ActionLink("Back to Pending Requests", "MarketingDirectorReviewIndex", "CPTRequest", null, new { @class = "btn btn-md btn-default" })
    }
</p>
