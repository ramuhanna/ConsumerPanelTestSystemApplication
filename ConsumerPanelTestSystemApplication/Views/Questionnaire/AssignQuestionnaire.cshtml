@model ConsumerPanelTestSystemApplication.ViewModels.QuestionnaireViewModel

@{
    ViewBag.Title = "Assign Questionnaire";
}

<h2>Assign Questionnaire</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
  
            <div class="form-group">
                @Html.LabelFor(model => model.CRUMEmployeeID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CRUMEmployeeID, "", new { @class = "text-danger" })
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-warning btn-md" />
                    @Html.ActionLink("Back to Questionnaire List", "CRUSupervisorIndex", null, new { @class = "btn btn-md btn-default" })
                </div>
            </div>

        <div>@Ajax.ActionLink("Questionnaire Execution Details", "ExecutionDetails", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "ExecutionDetails", HttpMethod = "GET", InsertionMode = InsertionMode.Replace }) </div>


</div>
}

@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.scroller.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.bootstrap.min.js")"></script>

    <script type="text/javascript">
      $(document).ready( function () {
          $('#submittedRequestsTable').DataTable();
      });

      $('#employeesTable').dataTable({
          "columnDefs": [
            { "orderable": false, "targets": -1 }
          ]
      });

    </script>
}

@section styles
{
    <link href="@Url.Content("/Content/DataTables/css/jquery.dataTables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/DataTables/css/dataTables.scroller.min.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/DataTables/css/dataTables.bootstrap.min.css")" rel="stylesheet" />
}

 

