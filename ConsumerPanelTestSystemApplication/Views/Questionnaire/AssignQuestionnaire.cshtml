@model ConsumerPanelTestSystemApplication.ViewModels.QuestionnaireViewModel

@{
    ViewBag.Title = "Assign Questionnaire";
}

<h2>Assign Questionnaire</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
  
            <div class="form-group">
                @Html.LabelFor(model => model.CRUMEmployeeName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CRUMEmployeeID, "", new { @class = "text-danger" })
                </div>
            </div>
        
            <div class="form-group">
                <div class="form-actions no-color col-md-offset-2">
                    @Html.ActionLink("Back to Questionnaire List", "CRUSupervisorIndex", null, new { @class = "btn btn-md btn-default" })
                    <input type="submit" value="Assign" class="btn btn-warning btn-md" />
                </div>
            </div>

</div>
}


 

