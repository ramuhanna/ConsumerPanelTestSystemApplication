@model ConsumerPanelTestSystemApplication.ViewModels.QuestionnaireViewModel

@{
    ViewBag.Title = "Questionnaire Details";
}

<h2>Questionnaire Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.ResponseQuantityRequired)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResponseQuantityRequired)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.QuestionnaireTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuestionnaireTypeName)
        </dd>

        <dt style="text-align:left">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>   
        
        @if (Model.BComment != null)
        {
            <dt style="text-align:left">
                @Html.DisplayNameFor(model => model.BComment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BComment)
            </dd>
        }

        @if (Model.MComment != null)
        {
            <dt style="text-align:left">
                @Html.DisplayNameFor(model => model.MComment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MComment)
            </dd>
        }     

    </dl>
</div>
<div class="form-actions no-color col-md-offset-2">
    @Html.ActionLink("Back to Request List", "CPTCoordinatorIndex", "CPTRequest", null, new { @class = "btn btn-md btn-default" })
        

    @if (Model.Status == ConsumerPanelTestSystemApplication.Models.QuestionnaireStatus.QuestionnaireCreation || Model.Status == ConsumerPanelTestSystemApplication.Models.QuestionnaireStatus.QuestionnaireModification)
    {
        @Html.ActionLink("View Survey", "CreateSurvey", "Survey", new { id = Model.QuestionnaireTypeId }, new { @class = "btn btn-md btn-success" })

        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-md btn-warning" })

    }

    @if (Model.Status == ConsumerPanelTestSystemApplication.Models.QuestionnaireStatus.QuestionnaireModification)
    {
        @Html.ActionLink("Confirm Resubmission", "ConfirmResubmission", "Questionnaire", new { id = Model.Id }, new { @class = "btn btn-md btn-warning" })
    }

    </div>
